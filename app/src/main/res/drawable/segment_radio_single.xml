<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <size android:width="@dimen/item_size" android:height="@dimen/item_size" />
            <corners android:radius="@dimen/angle_value" />
            <solid android:color="@color/segment_btn_pressed" />
            <stroke android:width="@dimen/divide_line" android:color="@color/segment_btn_line" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <size android:width="@dimen/item_size" android:height="@dimen/item_size" />
            <corners android:radius="@dimen/angle_value" />
            <solid android:color="@color/segment_btn_checked" />
            <stroke android:width="@dimen/divide_line" android:color="@color/segment_btn_line" />
        </shape>
    </item>

    <item>
        <shape>
            <size android:width="@dimen/item_size" android:height="@dimen/item_size" />
            <corners android:radius="@dimen/angle_value" />
            <solid android:color="@color/segment_btn_def" />
            <stroke android:width="@dimen/divide_line" android:color="@color/segment_btn_line" />
        </shape>
    </item>

</selector>